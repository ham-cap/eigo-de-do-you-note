<% set_meta_tags title: '登録済みのカードを編集' %>
<% set_meta_tags description: '登録済みのカードに記録されている日本語あるいは英語のフレーズを編集できます。' %>

<h1 class="flex justify-center font-bold text-4xl my-8">編集</h1>
<%= turbo_frame_tag @card do %>
  <%= form_with model: @card do |form| %>
    <div class="a-card-container flex flex-col w-5/6 mb-8">
      <div class="phrase-pair mb-2">
        <div class="ja-phrase w-full flex flex-col">
          <%= form.text_area :ja_phrase, class: 'h-[3rem] border border-gray-400 rounded-md' %>
        </div>
        <div class="en-phrase w-full flex flex-col">
          <%= form.text_area :en_phrase, class: 'h-[3rem] border border-gray-400 rounded-md' %>
        </div>
      </div>
      <div class="buttons flex flex-col space-y-2">
        <div class="submit-button w-full h-[2rem] flex justify-center border-2 border-solid border-[#aaaaaa] text-lg hover:bg-gray-100">
          <%= form.submit '更新する', class: "w-full h-full cursor-pointer" %>
        </div>
        <div class="cancel-button w-full h-[2rem] flex justify-center border-2 border-solid border-[#aaaaaa] text-lg hover:bg-gray-100">
          <%= link_to 'キャンセル', @card, class: "w-full h-full flex justify-center items-center cursor-pointer" %>
        </div>
        <div class="delete-button w-full h-[2rem] flex justify-center">
          <%= link_to '削除する', card_path(@card, @from_show ? { from_show: @from_show } : nil),
                                  data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？', turbo_frame: '_top' },
                                  class: "flex justify-center items-center cursor-pointer hover:underline" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
