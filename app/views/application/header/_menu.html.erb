      <%= link_to 'トップページ', cards_path, class: 'header-dropdown__item-link flex items-center h-full w-full' %>
    </li>
    <li class="header-dropdown__item h-[2rem] ml-[0.5rem] mr-[0.5rem] hover:bg-gray-100">
      <%= link_to '復習モード', review_cards_path, data: { turbo_prefetch: false }, class: 'header-dropdown__item-link flex items-center h-full w-full' %>
    </li>
    <li class="header-dropdown__item h-[2rem] ml-[0.5rem] mr-[0.5rem] hover:bg-gray-100">
