<% if notice %>
  <div class="fixed top-0 mt-[100px] max-w-screen-md w-full flex justify-end pointer-events-none mx-auto left-0 right-0">
    <div data-controller="flash" data-flash-dismiss-after-value="2000" class="w-48 md:w-56 h-[2rem] mr-4 md:mr-0 flex flex-col justify-center rounded bg-green-400 border-l-4 border-green-700 text-white pointer-events-auto">
      <div class="flex items-start">
        <div class="ml-3 w-0 flex-1">
          <p class="text-xs md:text-sm leading-5 font-medium">
          <%= notice %>
          </p>
        </div>
        <div class="mr-4 flex-shrink-0 flex">
          <button data-action="flash#close" class="inline-flex text-white focus:outline-none focus:text-gray-300 transition ease-in-out duration-150">
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
<% elsif alert %>
  <div class="fixed top-0 mt-16 max-w-screen-md w-full flex justify-end z-50 pointer-events-none mx-auto left-0 right-0">
    <div data-controller="flash" data-flash-dismiss-after-value="2000" class="w-48 md:w-56 h-[2rem] mr-4 md:mr-0 flex flex-col justify-center rounded bg-red-400 border-l-4 border-red-700 text-white pointer-events-auto">
      <div class="flex items-start">
        <div class="ml-3 w-0 flex-1">
          <p class="text-xs md:text-sm leading-5 font-medium">
            <%= alert %>
          </p>
        </div>
        <div class="ml-4 flex-shrink-0 flex">
          <button data-action="flash#close" class="inline-flex text-white focus:outline-none focus:text-gray-300 transition ease-in-out duration-150">
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
